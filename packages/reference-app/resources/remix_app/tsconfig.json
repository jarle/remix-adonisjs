{
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
  "include": [
    "../../**/*",
    "resources/remix_app/**/.server/**/*",
    "resources/remix_app/**/.client/**/*",
    "../../.react-router/types/**/*",
  ],
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "types": [
      "node",
      "vite/client"
    ],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "rootDirs": [
      ".",
      "../../.react-router/types/resources/remix_app"
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "esModuleInterop": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  }
}