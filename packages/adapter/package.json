{
  "name": "@matstack/remix-adonisjs",
  "description": "An adapter for using Remix with AdonisJS",
  "version": "1.0.0",
  "engines": {
    "node": ">=20.10.0"
  },
  "main": "build/index.js",
  "type": "module",
  "files": [
    "src",
    "providers",
    "index.ts",
    "build/commands",
    "build/src",
    "build/providers",
    "build/stubs",
    "build/index.d.ts",
    "build/index.d.ts.map",
    "build/index.js",
    "build/configure.d.ts",
    "build/configure.d.ts.map",
    "build/configure.js"
  ],
  "exports": {
    ".": "./build/index.js",
    "./commands": "./build/commands/main.js",
    "./remix_provider": "./build/providers/remix_provider.js",
    "./build_hook": "./build/src/hooks/build_hook.js",
    "./types": "./build/src/types/main.js"
  },
  "scripts": {
    "build": "npm run compile",
    "clean": "del-cli build",
    "compile": "npm run clean && tsc",
    "copy:templates": "copyfiles \"stubs/**/**/*.stub\" build",
    "copy:readme": "copyfiles -u 2 \"../../*.md\" build",
    "format": "prettier --write .",
    "lint": "eslint . --ext=.ts",
    "postcompile": "npm run copy:templates && npm run copy:readme && npm run index:commands",
    "precompile": "npm run lint",
    "prepublishOnly": "npm run build",
    "quick:test": "node --enable-source-maps --loader=ts-node/esm bin/test.ts",
    "release": "npm version patch --force && npm publish",
    "test": "cross-env NODE_DEBUG=adonisjs:*,matstack:* NODE_ENV=test node --loader ts-node/esm --enable-source-maps bin/test.ts",
    "typecheck": "tsc --noEmit",
    "version": "npm run build",
    "index:commands": "adonis-kit index build/commands"
  },
  "dependencies": {
    "@poppinss/utils": "^6.8.3"
  },
  "devDependencies": {
    "@adonisjs/core": "^6.14.1",
    "@adonisjs/eslint-config": "^1.3.0",
    "@adonisjs/http-server": "^7.2.5",
    "@adonisjs/prettier-config": "^1.4.0",
    "@adonisjs/session": "^7.5.0",
    "@adonisjs/tsconfig": "^1.4.0",
    "@adonisjs/vite": "^3.0.0",
    "@japa/assert": "^3.0.0",
    "@japa/expect": "^3.0.2",
    "@japa/runner": "^3.1.4",
    "@swc/core": "^1.9.2",
    "@types/cloneable-readable": "^2.0.3",
    "@types/node": "^22.9.0",
    "@types/set-cookie-parser": "^2.4.10",
    "@types/supertest": "^6.0.2",
    "c8": "^10.1.2",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "del-cli": "^6.0.0",
    "eslint": "^8.57.0",
    "node-mocks-http": "^1.16.1",
    "np": "^10.0.7",
    "prettier": "^3.3.3",
    "set-cookie-parser": "^2.7.1",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vite": "^5.4.11"
  },
  "peerDependencies": {
    "@react-router/node": "^7.0.0",
    "react": "^18.2.0",
    "react-router": "^7.0.0",
    "react-dom": "^18.2.0"
  },
  "peerDependenciesMeta": {},
  "author": "Jarle Mathiesen",
  "license": "MIT",
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jarle/remix-adonisjs"
  },
  "bugs": {
    "url": "https://github.com/jarle/remix-adonisjs/issues"
  },
  "homepage": "https://matstack.dev/remix-adonisjs",
  "prettier": "@adonisjs/prettier-config",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "np": {
    "message": "chore(release): %s",
    "tag": "latest",
    "branch": "main",
    "anyBranch": false
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  }
}
