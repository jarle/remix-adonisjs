{
  "name": "@matstack/remix-adonisjs",
  "description": "An adapter for using Remix with AdonisJS",
  "version": "0.0.17",
  "engines": {
    "node": ">=20.10.0"
  },
  "main": "build/index.js",
  "type": "module",
  "files": [
    "src",
    "providers",
    "index.ts",
    "build/src",
    "build/providers",
    "build/stubs",
    "build/index.d.ts",
    "build/index.d.ts.map",
    "build/index.js",
    "build/configure.d.ts",
    "build/configure.d.ts.map",
    "build/configure.js"
  ],
  "exports": {
    ".": "./build/index.js",
    "./remix_provider": "./build/providers/remix_provider.js",
    "./types": "./build/src/types/main.js"
  },
  "scripts": {
    "build": "npm run compile",
    "clean": "del-cli build",
    "compile": "npm run clean && tsc",
    "copy:templates": "copyfiles \"stubs/**/**/*.stub\" build",
    "format": "prettier --write .",
    "lint": "eslint . --ext=.ts",
    "postcompile": "npm run copy:templates",
    "precompile": "npm run lint",
    "prepublishOnly": "npm run build",
    "quick:test": "node --enable-source-maps --loader=ts-node/esm bin/test.ts",
    "release": "npm version patch --force && npm publish",
    "test": "node --loader ts-node/esm --enable-source-maps bin/test.ts",
    "typecheck": "tsc --noEmit",
    "version": "npm run build"
  },
  "dependencies": {
    "@poppinss/utils": "^6.7.1"
  },
  "devDependencies": {
    "@adonisjs/core": "^6.2.0",
    "@adonisjs/eslint-config": "^1.2.0",
    "@adonisjs/http-server": "^7.0.0-4",
    "@adonisjs/prettier-config": "^1.2.0",
    "@adonisjs/tsconfig": "^1.2.0",
    "@japa/assert": "^2.1.0",
    "@japa/expect": "^3.0.1",
    "@japa/runner": "^3.1.1",
    "@swc/core": "^1.3.105",
    "@types/cloneable-readable": "^2.0.3",
    "@types/node": "^20.11.5",
    "@types/supertest": "^6.0.2",
    "c8": "^8.0.1",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.1.0",
    "eslint": "^8.51.0",
    "node-mocks-http": "^1.14.1",
    "np": "^8.0.4",
    "prettier": "^3.2.4",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.1.5-29",
    "@remix-run/css-bundle": "^2.2.0",
    "@remix-run/dev": "^2.2.0",
    "@remix-run/node": "^2.2.0",
    "@remix-run/react": "^2.2.0",
    "isbot": "^3.6.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "peerDependenciesMeta": {},
  "author": "Jarle Mathiesen",
  "license": "MIT",
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/package"
  },
  "prettier": "@adonisjs/prettier-config",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "np": {
    "message": "chore(release): %s",
    "tag": "latest",
    "branch": "main",
    "anyBranch": false
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  }
}
